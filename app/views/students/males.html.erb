<h1>Males</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gpa</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Previouscollege</th>
      <th>Ethnicity</th>
      <th>Race</th>
      <th>Enrolled</th>
      <th>SSN</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <%if student.Gender.downcase  == "male"  %>
      <tr>
        <td><%= student.Firstname %></td>
        <td><%= student.Lastname %></td>
        <td><%= student.GPA %></td>
        <td><%= student.DoB %></td>
        <td><%= student.Gender %></td>
        <td><%= student.previouscollege %></td>
        <td><%= student.Ethnicity %></td>
        <td><%= student.Race %></td>
        <td><%= student.enrolled %></td>
        <td><%= student.SSN %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%else%>
    <h1>There are no males</h1>
        <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Student', new_student_path %>